{{ form_start(form, { 'attr': { 'class': 'needs-validation' } }) }}
    <div class="mb-3">
        {{ form_row(form.name, { 'attr': { 'placeholder': 'Enter product name' } }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.description, { 'attr': { 'placeholder': 'Enter product description (optional)', 'rows': 3 } }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.price, { 'attr': { 'placeholder': 'Enter price' } }) }}
    </div>
    

    <div class="d-flex justify-content-end">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
