{{ form_start(form, { 'attr': { 'class': 'needs-validation' } }) }}
    <div class="mb-3">
        {{ form_row(form.categoryName, { 'attr': { 'placeholder': 'Enter category name' } }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.description, { 'attr': { 'placeholder': 'Enter description (optional)', 'rows': 3 } }) }}
    </div>

    <div class="d-flex justify-content-end">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
