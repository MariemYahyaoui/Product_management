{{ form_start(form, { 'attr': { 'class': 'needs-validation' } }) }}

<div class="mb-3">
    {{ form_row(form.categoryName, { 'attr': { 'placeholder': 'Enter category name', 'class': 'form-control' } }) }}
</div>

<div class="mb-3">
    {{ form_row(form.description, { 'attr': { 'placeholder': 'Enter description (optional)', 'rows': 3, 'class': 'form-control' } }) }}
</div>

<div class="d-flex justify-content-end">
    <button class="btn btn-primary">{{ button_label}}</button>
</div>

{{ form_end(form) }}
